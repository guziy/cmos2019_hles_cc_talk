	Journal = {Monthly Weather Review},
	Number = {6},
	Pages = {1990-2014},
	Title = {{Simulation of Heavy Lake-Effect Snowstorms across the Great Lakes Basin by RegCM4: Synoptic Climatology and Variability}},
