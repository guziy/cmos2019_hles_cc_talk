	Journal = {Journal of Climate},
	Number = {4},
	Pages = {1661-1684},
	Title = {{Dynamically Downscaled Projections of Lake-Effect Snow in the Great Lakes Basin}},
	Url = {https://doi.org/10.1175/JCLI-D-14-00467.1},
	Volume = {28},
	Year = {2015},
